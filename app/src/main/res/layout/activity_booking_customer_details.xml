<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fefefe">


<!--    Address-->
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <EditText
            android:id="@+id/input_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_textshadow"
            android:hint=" Address"
            android:minWidth="350dp"
            android:drawableStart="@drawable/ic_action_address"
            android:drawableLeft="@drawable/ic_action_address"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:padding="10dp"
            android:textColorHint="#808080"
            android:textColorLink="#000000"
            android:elevation="100dp"
            />

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<!--        Room-->

        <EditText
            android:id="@+id/input_room"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:drawableStart="@drawable/ic_action_username"
            android:drawableLeft="@drawable/ic_action_username"
            android:background="@drawable/rounded_textshadow"
            android:hint=" Room"
            android:textColor="#000000"
            android:padding="10dp"
            android:textColorHint="#808080"
            android:textColorLink="#000000"
            android:elevation="100dp"/>

<!--        Floor-->

        <EditText
            android:id="@+id/input_floor"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:drawableStart="@drawable/ic_action_floor"
            android:drawableLeft="@drawable/ic_action_floor"
            android:background="@drawable/rounded_textshadow"
            android:hint=" Floor"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:padding="10dp"
            android:textColorHint="#808080"
            android:textColorLink="#000000"
            android:elevation="100dp"/>

    </LinearLayout>

<!--Building/Block-->
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/input_building"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_textshadow"
            android:hint=" Building/Block"
            android:minWidth="350dp"
            android:drawableStart="@drawable/ic_action_building"
            android:drawableLeft="@drawable/ic_action_building"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:padding="10dp"
            android:textColorHint="#808080"
            android:textColorLink="#000000"
            android:elevation="100dp"
            />
    </LinearLayout>

<!--    Contact Name-->


    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_textshadow"
            android:hint=" Contact Name"
            android:minWidth="350dp"
            android:drawableStart="@drawable/ic_action_username"
            android:drawableLeft="@drawable/ic_action_username"
            android:textColor="#000000"
            android:padding="10dp"
            android:textColorHint="#808080"
            android:textColorLink="#000000"
            android:elevation="100dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_textshadow"
            android:hint=" Mobile Number"
            android:minWidth="350dp"
            android:drawableStart="@drawable/ic_action_mobile_number"
            android:drawableLeft="@drawable/ic_action_mobile_number"
            android:textColor="#000000"
            android:padding="10dp"
            android:textColorHint="#808080"
            android:textColorLink="#000000"
            android:elevation="100dp"
            />
    </LinearLayout>


<!--    Set up location-->
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pickup_location"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundercolorgreen"
            android:elevation="20dp"
            android:padding="12dp"
            android:text="Set Pick up Location"
            android:textColor="#fefefe" />
    </LinearLayout>



</LinearLayout>