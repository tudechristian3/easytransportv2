<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Booking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:background="#fefefe">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_textshadow"
        android:id="@+id/etOrigin"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Enter origin address"
        android:textColorHint="#d6d6d6"
        android:textColorLink="#000000"
        android:drawableLeft="@drawable/ic_action_location"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/etDestination"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#000000"
        android:textColorHint="#d6d6d6"
        android:textColorLink="#000000"
        android:background="@drawable/rounded_textshadow"
        android:drawableStart="@drawable/ic_action_destination"
        android:drawableLeft="@drawable/ic_action_destination"
        android:padding="10dp"
        android:hint="Enter destination address" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Find path"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btnFindPath"

            android:background="@drawable/roundedgreen2"
            android:textColor="#fefefe"
            android:layout_marginTop="10dp"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="0 km"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:id="@+id/tvDistance" />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 min"
            android:textColor="#000000"

            android:layout_marginTop="10dp"
            android:id="@+id/tvDuration" />

    </LinearLayout>



    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Booking" />

</LinearLayout>
